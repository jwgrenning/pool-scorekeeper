<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">#FFFFFF</item>
"</style>

    <style name="ButtonBarButton" parent="@style/AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MissButton" parent="@style/ButtonBarButton">
        <item name="android:background">@color/miss_button</item>
    </style>

    <style name="RerackButton" parent="@style/ButtonBarButton">
        <item name="android:background">@color/miss_button</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ScoreTable" parent="@style/AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        </style>

    <style name="ScoreTableNumberEntry" parent="ScoreTable">
        <item name="android:text">0</item>
    </style>

    <style name="ScoreTableTextEntry" parent="ScoreTable">
    </style>

    <style name="ScoreTableBlankEntry" parent="ScoreTable">
        <item name="android:text"></item>
    </style>

    <style name="VerticalButton" parent="ScoreTable"></style>

    <style name="ScoreTableRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="ScoreTableButton" parent="ScoreTable"></style>

    <style name="ScoreTableHeading" parent="ScoreTable">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

</resources>